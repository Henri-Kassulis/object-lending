<label>Name: {{username}}</label>

<form action="{{post_path}}" method="POST">

	<div class="form-group">
		<label for="contact">contact</label>
		<textarea name="contact" id="contact" class="form-control" required>{{contact}}</textarea>
	</div>

	<div class="form-group">
		<label for="latitude">Breitengrad</label>
		<input type="number" min="-90" max="90" step="0.00001" name="latitude" id="latitude"
			class="form-control" required value="{{latitude}}" />
	</div>

	<div class="form-group">
		<label for="longitude">Längengrad</label>
		<input type="number" min="-180" max="180" step="0.00001" name="longitude" id="longitude"
			class="form-control" required value="{{longitude}}" />
	</div>

	<input type="submit" name="submit" value="Speichern" class="btn btn-primary" />

</form>

<form action="/delete_profile" method="POST">
	<label for="longitude">Account löschen</label>
	<input type="submit" name="submit" value="Account löschen" class="btn btn-danger" />
</form>