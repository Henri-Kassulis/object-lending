<form action="{{post_path}}" method="POST">

   <div class="form-group">
      <label for="tags">Tags</label>
      <input type="text" name="tags" id="tags" class="form-control" />
   </div>

   <div class="form-group">
      <label for="tags_exclude">Tags (ausschließen)</label>
      <input type="text" name="tags_exclude" id="tags_exclude" class="form-control" />
   </div>

   <!-- https://stackoverflow.com/questions/2825856/html-button-to-not-submit-form -->
   <button type="button" class="btn btn-primary" onclick="getLocation()">Eigener Standort</button>

   <div class="form-group">
      <label for="latitude">Breitengrad</label>
      <input type="number" min="-90" max="90" step="0.00001" name="latitude" id="latitude"
         class="form-control" />
   </div>

   <div class="form-group">
      <label for="longitude">Längengrad</label>
      <input type="number" min="-180" max="180" step="0.00001" name="longitude" id="longitude"
         class="form-control" />
   </div>

   <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="name" id="name" class="form-control" />
   </div>

   <div class="form-group">
      <label for="description">Beschreibung</label>
      <input type="text" name="description" id="description" class="form-control" />
   </div>

   <input type="submit" name="submit" value="Suchen" class="btn btn-primary" />

</form>

Tags with usage count
<ul class="list-group">
    {{#tag_usage}}
        <li class="list-group-item">{{key}} <span class="badge">({{value}})</span></li>
    {{/tag_usage}}
</ul>